//定义一个函数
scrollbar-bar()
  width 0.7rem
  background-color #f5f5f5

scrollbar-track-bar()
  ::-moz-scrollbar-track
    -moz-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.3)
    border-radius 20px
    background-color #ffffff

scrollbar-thumb-bar()
  ::-moz-scrollbar-thumb
    border-radius 5px
    -moz-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.3)
    background-color rgb(199,199,199)

scrollbar-hover-bar()
  ::-moz-scrollbar-thumb:hover
    background-color rgba(95, 95, 95, 0.7)
